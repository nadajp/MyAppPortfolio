<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_blue"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/title"
            android:textColor="#000000"
            android:textSize="25sp" />

        <Button
            android:id="@+id/buttonPopularMovies"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/textTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@color/orange"
            android:onClick="startPopularMovies"
            android:text="@string/popular_movies"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonScores"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/buttonPopularMovies"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/orange"
            android:onClick="startScores"
            android:text="@string/scores_app"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonLibrary"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/buttonScores"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/orange"
            android:onClick="startLibrary"
            android:text="@string/library_app"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonBuildItBigger"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/buttonLibrary"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/orange"
            android:onClick="startBuildIt"
            android:text="@string/build_it_bigger"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonXYZReader"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/buttonBuildItBigger"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/orange"
            android:onClick="startXYZ"
            android:text="@string/xyz_reader"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonCapstone"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/buttonXYZReader"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/red"
            android:onClick="startCapstone"
            android:text="@string/capstone"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
</ScrollView>
